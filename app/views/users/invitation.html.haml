.row
  %span11 
    %h1 Accept invitation

    - @user.password = @user.password_confirmation = nil

    = error_messages_for :user

    = form_for(@user, :url => { :action => 'accept_invitation', :id => @invite.code }) do |f|
      %fieldset
        %legend
          Personal Details
        .clearfix
          = f.label :first_name
          .input
            = f.text_field :first_name
        .clearfix
          = f.label :last_name
          .input
            = f.text_field :last_name
        .clearfix
          = f.label :email
          .input
            = f.text_field :email

      %fieldset
        %legend
          Account Details
        .clearfix        
          = f.label :login
          .input
            = f.text_field :login
        .clearfix
          = f.label :password
          .input
            = f.password_field :password
        .clearfix
          = f.label :password_confirmation, 'Confirm Password'
          .input
            = f.password_field :password_confirmation

        = hidden_field_tag :invite_id, @invite.code
      
      .actions
        %button.btn.primary{:type => 'submit'} Sign up
