%tr
  %td.name
    = h page.title
  %td
    = h page.url
  %td
    - if page.status_text == 'Up'
      %span.label.label-success
        UP
    - elsif page.status_text == 'Down'
      %span.label.label-important
        Down
    - else
      %span.label
        Awaiting Data
  %td
    = h page.search_text
  %td.action
    = link_to 'Edit', edit_server_page_path(@server, page)
    \|
    = link_to 'Delete', server_page_path(@server, page), :confirm => 'Are you sure?', :method => :delete
