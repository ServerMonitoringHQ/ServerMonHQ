- form_tag(session_path,{:class => "signup"}) do
  %fieldset
    %legend
      Your details
    %ul
      %li
        = label_tag 'login'
        = text_field_tag 'login', @login
      %li
        = label_tag 'password'
        = password_field_tag 'password', nil
      %li
        = label_tag 'remember_me', 'Remember me'
        = check_box_tag 'remember_me', '1', @remember_me
  %fieldset
    %button{ :type => "submit" }
      Login
    or
    = link_to 'Forgotten Password ?', forgot_path
