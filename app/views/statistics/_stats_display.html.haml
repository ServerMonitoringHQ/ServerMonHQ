#livestats
  
  %table.table-bordered.table.table-condensed
    %tbody
      %tr
        %td{ :width => '20%' }
          Current Load
        %td#cpu-load{ :width => '20%' }
          = h @server.cpuload
        %td
          #load-graph.progress.progress-striped
        %td#cpu-load2{ :width => '20%' }
          = h @server.cpuload
          \/ 1.0
      %tr
        %td
          Memory Used
        %td#memory-used
          = h @server.usedmem
        %td
          #memory-graph.progress.progress-striped
        %td#memory2
          = h @server.usedmem
          MB \/
          = h @server.totalmem
          MB
      - if ! (@server.totalswap == 0 or @server.totalswap == nil)
        %tr
          %td
            Swap Used
          %td#swap
            = @server.usedswap
          %td
            #swap-graph.progress.progress-striped
          %td#swap2
            = @server.usedswap
            \/
            = @server.totalswap

  %table.table-bordered.table.table-condensed
    %tbody
      - @server.disks.each_index do |i|
        %tr
          %td{ :width => '20%' }
            = Disk
          %td{ :width => '20%' }
            = @server.disks[i].path
          != '<td><div id="drive-graph' + i.to_s + '" class="progress progress-striped progress-danger"></div></td>'
          %td{ :width => '20%' }
            = @server.disks[i].usedspace
            \/
            = @server.disks[i].totalspace

.row
  .span6
    .well
      %h3
        Bandwidth Usage
      %ul.unstyled
        %li
          = image_tag 'icons/php.gif'
          TX:
          %span#tx
        %li
          = image_tag 'icons/database.gif'
          RX:
          %span#rx
        %li
          = image_tag 'icons/zend.gif'
          TX Rate :
          %span#tx_rate
          \/ min

  .span6
    .well
      %h3
        System Stats &amp; Info
      %ul.unstyled
        %li
          = image_tag 'icons/comp.gif'
          Uptime:
          %span#uptime
        %li
          = image_tag 'icons/load.gif'
          Avg Load:
          %span#load1
          %span#load2
          %span#load3
        %li
          = image_tag 'icons/memory.gif'
          Memory:
          %span#memory_stat
            = h @server.usedmem
            MB \/
            = h @server.totalmem
            MB

  .span6
    .well
      %h3
        CPU/Processor Info
      %ul.unstyled
        %li
          = image_tag 'icons/cpu.gif'
          CPU:
          %span#cpu
            = @server.cpu
        %li
          = image_tag 'icons/cpunum.gif'
          Number Of CPU(s):
          %span#cpucount
            = @server.cpucount
        %li
          = image_tag 'icons/speed.gif'
          Speed:
          %span#cpumhz
            = @server.cpumhz

  .span6
    .well
      %h3
        Distro &amp; Os Info
      %ul.unstyled
        %li
          = image_tag 'icons/distro.gif'
          Linux Distro:
          = @server.distro
        %li
          = image_tag 'icons/kernel.gif'
          Kernel:
          = @server.kernelver
        %li
          = image_tag 'icons/platform.gif'
          Platform:
          = @server.platform
