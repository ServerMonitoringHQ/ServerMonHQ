#context-header
  .inner-page
    .left-side
      %h1
        Add a New Monitor
    .right-side
.inner-page
  .yui-ge
    .yui-u.first
      = form_for(@measure, :html => { :class => 'data-entry'} ) do |f|
        = render :partial => 'form', :locals => { :f => f }
        %p
          = f.submit 'Create', :class => 'awesome'
          or
          = link_to 'Cancel', measures_path
    .yui-u
