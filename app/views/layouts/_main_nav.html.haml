.navbar.navbar-fixed-top
  .navbar-inner
    .container
      .nav-collapse
        %ul.nav
          = link_to('ServerMonitoring HQ', servers_path, :class => 'brand')
        %ul.nav.secondary-nav.pull-right
          - if ! current_user.account.active?
            %li
              %p
                = time_ago_in_words(current_user.account.trial_end, Time.now)
                trial remaining
          - if current_user.admin?
            %li
              = link_to 'Account', account_path
          %li
            = link_to 'My Profile', edit_user_path(current_user)
          %li
            = link_to 'Logout', logout_path
