!!!5
%html
  %head
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}/
    %title
      = @title || "Server Monitoring"
    %link{:rel => 'icon', :href => '/assets/favicon.ico'} 
    = csrf_meta_tag
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'

    = render :partial => "layouts/analytics"
    :javascript
      var _kmq = _kmq || [];
      function _kms(u){
        setTimeout(function(){
        var s = document.createElement('script'); var f = document.getElementsByTagName('script')[0]; s.type = 'text/javascript'; s.async = true;
        s.src = u; f.parentNode.insertBefore(s, f);
        }, 1);
      }
      _kms('//i.kissmetrics.com/i.js');_kms('//doug1izaerwt3.cloudfront.net/3c80f932436f9f2194839a5d6e037193deffd8c8.1.js');

  %body
    #wrapper
      .topbar
        .topbar-inner
          .container

            = render 'layouts/main_nav'
      #body
        .top-back
        
          .container
            %ul.nav.nav-tabs.sm
              %li#server-tab{ :class => select_tab(/servers/) }
                = link_to 'Servers', servers_path
              %li#monitor-tab{ :class => select_tab(/measures/) }
                = link_to 'Monitors', measures_path
              %li#incidents-tab{ :class => select_tab(/incidents/) }
                = link_to 'Incidents', incidents_path
              %li#contacts-tab{ :class => select_tab(/users/) }
                = link_to 'Contacts', users_path
        .row
          .page-info
            .container
              = yield :page_title

        .container
          = yield
      
      = render :partial => "layouts/footer"
