!!!5
%html
  %head
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}/
    %title
      = @title || "Server Monitoring"
    %link{:rel => 'icon', :href => '/assets/favicon.ico'} 
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'

    = render :partial => "layouts/analytics"
  %body
    #wrapper
      .topbar
        .topbar-inner
          .container

            = render 'layouts/main_nav'
      #body
        .top-back
        
          .container
            %ul.nav.nav-tabs.sm
              %li#server-tab{ :class => select_tab(/servers/) }
                = link_to 'Servers', servers_path
              %li#monitor-tab{ :class => select_tab(/measures/) }
                = link_to 'Monitors', measures_path
              %li#incidents-tab{ :class => select_tab(/incidents/) }
                = link_to 'Incidents', incidents_path
              %li#contacts-tab{ :class => select_tab(/users/) }
                = link_to 'Contacts', users_path
        .row
          .page-info
            .container
              = yield :page_title

        .container
          = yield
      
      = render :partial => "layouts/footer"
