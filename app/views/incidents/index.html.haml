- content_for :page_title do
  %h1.header
    Incidents
  %p
    These are the incidents reported so far.
.row
  .span12
    %h2 Open Incidents
    = paginate @incidents

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Server Name
          %th
            Monitor Name
          %th
            Incident Type
          %th
            Description
          %th
            Raised Time
          %th
            Approx Duration
          %th
            Status
      %tbody
        = render @incidents

    %h2 Resolved Incidents for Last 24 Hours
    - @incidents = @closed_incidents
    = paginate @incidents

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Server Name
          %th
            Monitor Name
          %th
            Incident Type
          %th
            Description
          %th
            Raised Time
          %th
            Approx Duration
          %th
            Status
      %tbody
        = render @incidents
