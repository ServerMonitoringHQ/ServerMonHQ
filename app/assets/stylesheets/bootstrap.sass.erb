$border_color: #cccccc

small#timer-text
  font-size: 9px

html, body
  height: 100%
.block-message p
  margin-top: 10px

#wrapper
  min-height: 100%
  position: relative

.top-back
  margin-top: -20px
  padding-top: 20px
  background-color: #424242

.nav.sm 
  margin-bottom: 0
  border-bottom: 0

.nav.sm > li.normal > a
  color: white

.nav.sm > li.normal > a:hover
  color: black

.nav.sm > li.active > a
  background-color: #f5f5f5

.tabs.sm > li.normal > a:hover
  color: black

#body
  padding-top: 60px
  padding-bottom: 90px

h2
  line-height: 28px
  margin-bottom: 15px

h3
  font-size: 17px
  line-height: 24px
  margin-bottom: 10px

h1
  font-size: 26px
  text-shadow: 1px 1px 2px #FFFFFF
  margin-bottom: 5px
  
#headings
  text-align: center

#headings h1
  color: #2D76C4

#headings h2
  font-size: 18px
  margin-bottom: 20px
  
dl dd
  margin: 0 0 10px 0

footer
  text-align: center
  position: absolute
  bottom: 0
  width: 100%
  height: 70px

footer p
  font-size: 9px

table.form-table
  td.normal
    width: 20%

.page-info
  background-color: #f5f5f5
  padding: 10px 0 0 20px
  margin: 0 0 20px 0
  border-top: 1px solid #ddd
  border-bottom: 1px solid #ddd

.tabs
  width: auto
  float: right
  border-bottom: none
  margin-bottom: 0

.breadcrumb 
  border: none
  background: none
  -webkit-border-radius: 0
  -moz-border-radius: 0
  border-radius: 0
  -webkit-box-shadow: none
  -moz-box-shadow: none
  box-shadow: none
  margin: 0
  padding: 7px 14px 7px 20px

#top
  margin: 0
  border: none
  background: none
  padding: 0

ul.load
  margin: 0

ul.load li
  list-style-position: inside
  line-height: 24px

.tabs > li.active > a
  background: #f5f5f5

.plan
  text-align: center

  em
    font-size: 21px

.modal.session
  position: relative
  z-index: 0
  left: 0
  top: 0
  margin: 50px auto

.modal > form
  margin-bottom: 0

.server-table
  .btn.small
    width: 75%
    margin-bottom: 8px
    text-align: center

  .stats
    strong
      font-size: 40px

.screengrabs img
  border: 1px solid $border_color

#signup-call a
  background-color: #2D76C4
  color: white
  cursor: pointer
  display: block
  text-decoration: none
  text-align: center
  padding: 20px 0
  font-size: 18px

.screenshot
  position: relative

  ul
    li
      font-size: 10px
      border-top: 3px solid #2D76C4
      list-style: none outside none
      padding-top: 6px
      position: absolute
      width: 110px
      text-align: left

    li.right
      padding-right: 0 !important
      right: 0 !important
      text-align: right

.servers-nav
  margin-right: 10px

  li.active a
    background: #fff
